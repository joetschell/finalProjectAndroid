<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id ="@+id/Gallows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gallows"
        />




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/mWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winner!"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/mLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Lost!"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation = "horizontal">

        <TextView
            android:id="@+id/aLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_marginLeft="5dp"
            android:textColor="#ff000000"
            android:visibility="invisible"
            />

            <TextView
                android:id="@+id/pLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="P"
                android:textColor="#ff000000"
                android:visibility="invisible"
              />
            <TextView
                android:id="@+id/p2Letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:layout_marginLeft="11dp"
                android:textColor="#ff000000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/lLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:layout_marginLeft="10dp"
                android:textColor="#ff000000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/eLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:layout_marginLeft="10dp"
                android:textColor="#ff000000"
                android:visibility="invisible"
                />
            </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/underscore"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/underscore"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/underscore"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/underscore"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/underscore"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/aButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="A"/>

        <Button
            android:id="@+id/bButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="B"/>

        <Button
            android:id="@+id/cButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="C"/>

        <Button
            android:id="@+id/dButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="D"/>

        <Button
            android:id="@+id/eButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="E"/>

        <Button
            android:id="@+id/fButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="F"/>

        <Button
            android:id="@+id/gButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="G"/>




    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/hButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="H"/>

        <Button
            android:id="@+id/iButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="I"/>

        <Button
            android:id="@+id/jButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="J"/>

        <Button
            android:id="@+id/kButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="K"/>

        <Button
            android:id="@+id/lButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="L"/>

        <Button
            android:id="@+id/mButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="M"/>

            <Button
                android:id="@+id/nButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="N"/>




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/oButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="O"/>

        <Button
            android:id="@+id/pButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="P"/>

        <Button
            android:id="@+id/qButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Q"/>

        <Button
            android:id="@+id/rButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="R"/>

        <Button
            android:id="@+id/sButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="S"/>

        <Button
            android:id="@+id/tButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="T"/>

        <Button
            android:id="@+id/uButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="U"/>





</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/vButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="V"/>
            <Button
                android:id="@+id/wButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="W"/>
            <Button
                android:id="@+id/xButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="X"/>

            <Button
                android:id="@+id/yButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Y"/>

            <Button
                android:id="@+id/zButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Z"/>
</LinearLayout>

</LinearLayout>
</LinearLayout>